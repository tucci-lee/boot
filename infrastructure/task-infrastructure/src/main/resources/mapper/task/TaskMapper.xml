<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tuccicode.boot.task.infrastructure.mapper.TaskMapper">

    <sql id="ALL">
        id
        , `name`, class_name, cron, status, remarks, create_time, updated_time, is_deleted
    </sql>

    <select id="selectPage" resultType="com.tuccicode.boot.task.infrastructure.dataobject.TaskDO">
        SELECT
            <include refid="ALL"/>
        FROM
            task
        WHERE
            is_deleted = FALSE
        <if test="q.name != null and q.name != ''">
            AND `name` LIKE CONCAT(#{q.name}, '%')
        </if>
        <if test="q.status != null">
            AND status = #{q.status}
        </if>
        ORDER BY id DESC
    </select>
    <select id="selectByName" resultType="com.tuccicode.boot.task.infrastructure.dataobject.TaskDO">
        SELECT
            <include refid="ALL"/>
        FROM
            task
        WHERE
            is_deleted = FALSE
        AND name = #{name}
    </select>
    <select id="selectById" resultType="com.tuccicode.boot.task.infrastructure.dataobject.TaskDO">
        SELECT
            <include refid="ALL"/>
        FROM
            task
        WHERE
            is_deleted = FALSE
        AND id = #{id}
    </select>
    <select id="selectList" resultType="com.tuccicode.boot.task.infrastructure.dataobject.TaskDO">
        SELECT
        <include refid="ALL"/>
        FROM
        task
        WHERE
        is_deleted = FALSE
    </select>

</mapper>